<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
<%- include('nav.ejs')%>
    <div class="container-fluid">

        <table class="table m-2      ">
            <thead class="border ">
                <tr>
                   <th scope="col"><h1>Todos</h1></th>
                     <th scope="col"><h1>   Status</h1> </th>

                </tr>
            </thead>
            <tbody>
                <% todos.forEach(t=>{ %>
                    <tr>
                        <th scope="row" >
                          <span class="badge bg-dark text-wrap"> <%= t.id %></span> 
                        </th>
                        <td>
                          <h3> <span class="fw-bolder badge bg-info text-dark"> <%= t.title %> </span></h3>
                        </td>
                        <% if(t.completed ){ %>
                            <td><span class="badge text-bg-primary">
                                    <h5><%= t.completed %></h5  >
                                </span>
                            </td>
                            <% } else { %>
                                <td><span class="badge text-bg-danger">
                                      <h5>  <%= t.completed %></h5>
                                    </span>
                                    <% } %>
                    </tr>
                    <% }) %>

            </tbody>
        </table>
    </div>
